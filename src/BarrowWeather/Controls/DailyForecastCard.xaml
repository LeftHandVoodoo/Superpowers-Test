<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="BarrowWeather.Controls.DailyForecastCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource FrostedCardStyle}">
        <StackPanel>
            <Border Style="{StaticResource AccentHeaderStyle}">
                <TextBlock Text="7-Day Forecast"
                           Style="{StaticResource CardHeaderStyle}"
                           Margin="0"/>
            </Border>
            <ItemsControl x:Name="DailyList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding Background}"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,4,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding DayName}"
                                           FontWeight="{Binding DayFontWeight}"
                                           FontSize="14"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding HighText}"
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding LowText}"
                                               FontSize="14"
                                               Foreground="#90A4AE"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Description}"
                                           FontSize="13"
                                           Foreground="#B0BEC5"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
