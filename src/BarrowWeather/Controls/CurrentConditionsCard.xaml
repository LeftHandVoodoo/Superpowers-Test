<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="BarrowWeather.Controls.CurrentConditionsCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border x:Name="CardBorder" Style="{StaticResource HeroCardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Temperature and Condition -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="20">
                <TextBlock x:Name="TemperatureText"
                           Text="--°F"
                           Style="{StaticResource HeroTemperatureStyle}"/>
                <StackPanel VerticalAlignment="Center" Spacing="4">
                    <TextBlock x:Name="FeelsLikeText"
                               Text="Feels like --°F"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock x:Name="ConditionText"
                               Text="--"
                               FontSize="16"
                               Foreground="#B0BEC5"/>
                </StackPanel>
            </StackPanel>

            <!-- Details -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="40" Margin="0,24,0,0">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE9F4;"
                              FontSize="20"
                              Foreground="{StaticResource WindIconBrush}"/>
                    <TextBlock x:Name="WindText"
                               Text="Wind: -- mph"
                               FontSize="15"
                               Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE7B5;"
                              FontSize="20"
                              Foreground="{StaticResource HumidityIconBrush}"/>
                    <TextBlock x:Name="HumidityText"
                               Text="Humidity: --%"
                               FontSize="15"
                               Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <!-- Sunrise/Sunset -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="40" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE706;"
                              FontSize="20"
                              Foreground="{StaticResource SunIconBrush}"/>
                    <TextBlock x:Name="SunriseText"
                               Text="Sunrise: --:--"
                               FontSize="15"
                               Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE708;"
                              FontSize="20"
                              Foreground="#FF9800"/>
                    <TextBlock x:Name="SunsetText"
                               Text="Sunset: --:--"
                               FontSize="15"
                               Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
