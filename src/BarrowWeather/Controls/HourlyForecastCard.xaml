<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="BarrowWeather.Controls.HourlyForecastCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource FrostedCardStyle}">
        <StackPanel>
            <Border Style="{StaticResource AccentHeaderStyle}">
                <TextBlock Text="Hourly Forecast"
                           Style="{StaticResource CardHeaderStyle}"
                           Margin="0"/>
            </Border>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="HourlyList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding Background}"
                                    CornerRadius="8"
                                    Padding="12,16"
                                    MinWidth="70">
                                <StackPanel HorizontalAlignment="Center" Spacing="8">
                                    <TextBlock Text="{Binding TimeText}"
                                               HorizontalAlignment="Center"
                                               FontSize="13"
                                               Foreground="#B0BEC5"/>
                                    <TextBlock Text="{Binding TempText}"
                                               HorizontalAlignment="Center"
                                               FontWeight="SemiBold"
                                               FontSize="20"
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding PrecipText}"
                                               HorizontalAlignment="Center"
                                               FontSize="12"
                                               Foreground="{StaticResource SkyBlueLightBrush}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>
