<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="BarrowWeather.Controls.AlertsCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border x:Name="AlertBorder"
            Background="#33FFA000"
            BorderBrush="#FFA000"
            BorderThickness="2"
            CornerRadius="12"
            Padding="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
                <FontIcon x:Name="AlertIcon"
                          Glyph="&#xE7BA;"
                          FontSize="24"
                          Foreground="#FFA000"/>
                <TextBlock Text="Weather Alerts"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#FFA000"/>
            </StackPanel>
            <ItemsControl x:Name="AlertsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1AFFA000"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,4,0,4">
                            <StackPanel>
                                <TextBlock Text="{Binding Event}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding Headline}"
                                           TextWrapping="Wrap"
                                           FontSize="13"
                                           Foreground="#CFD8DC"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
